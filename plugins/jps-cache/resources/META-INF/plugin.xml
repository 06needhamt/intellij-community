<idea-plugin>
  <id>com.jetbrains.jps.cache</id>
  <vendor>JetBrains</vendor>
  <name>JPS Cache</name>

  <description><![CDATA[
  Adds support for working with JPS portable caches
]]></description>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <action id="com.intellij.jps.cache.JpsCacheSimpleAction" class="com.intellij.jps.cache.JpsCacheSimpleAction" text="Pull JPS Chache ">
      <add-to-group group-id="BuildMenu" anchor="first"/>
    </action>
  </actions>

  <project-components>
    <component>
      <implementation-class>com.intellij.jps.cache.JpsCachePluginComponent</implementation-class>
    </component>
  </project-components>
</idea-plugin>