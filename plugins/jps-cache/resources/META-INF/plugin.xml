<idea-plugin>
  <id>com.jetbrains.jps.cache</id>
  <vendor>JetBrains</vendor>
  <name>JPS Cache</name>

  <description><![CDATA[
  Adds support for working with JPS portable caches
]]></description>

  <extensions defaultExtensionNs="com.intellij">
    <backgroundPostStartupActivity implementation="com.intellij.jps.cache.JpsCachesProjectStateListener"/>
  </extensions>

  <actions>
    <action id="com.intellij.jps.cache.JpsDownloadCachesAction" class="com.intellij.jps.cache.JpsDownloadCachesAction" text="Download JPS Caches">
      <add-to-group anchor="first" group-id="BuildMenu"/>
    </action>
    <action id="com.intellij.jps.cache.JpsBinaryDataUploadAction" class="com.intellij.jps.cache.JpsBinaryDataUploadAction" text="Upload JPS Binary Data">
      <add-to-group anchor="after" relative-to-action="com.intellij.jps.cache.JpsDownloadCachesAction" group-id="BuildMenu"/>
    </action>
  </actions>

  <project-components>
    <component>
      <implementation-class>com.intellij.jps.cache.loader.JpsOutputLoaderManager</implementation-class>
    </component>
  </project-components>
</idea-plugin>