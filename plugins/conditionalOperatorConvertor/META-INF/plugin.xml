<idea-plugin version="2">
  <name>Conditional Operator Converter</name>
  <id>ConditionalOperatorConverter</id>
  <description>Intention action that suggests to convert a conditional operator into <i>if</i> block.</description>
  <version>1.3</version>
  <vendor logo="/general/ijLogo.png">JetBrains</vendor>
  <idea-version min="4.0" max="4.5"/>

  <extensions xmlns="com.intellij">
    <errorHandler implementation="com.intellij.diagnostic.ITNReporter"/>
    <component area="IDEA_PROJECT">
      <implementation>com.intellij.codeInsight.intention.ConditionalOperatorConvertor</implementation>
      <!--<options>-->
      <!--  <option name="internal" value="true"/>-->
      <!--</options>-->
    </component>
  </extensions>

</idea-plugin>
