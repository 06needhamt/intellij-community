<idea-plugin>
  <name>Coverage</name>
  <depends optional="true">TestNG-J</depends>
  <extensionPoints>
    <extensionPoint qualifiedName="com.intellij.coverageRunner" interface="com.intellij.coverage.CoverageRunner"/>
  </extensionPoints>
  <extensions defaultExtensionNs="com.intellij">
    <runConfigurationExtension implementation="com.intellij.execution.coverage.CoverageRunConfigurationExtension"/>
    <testActionProvider implementation="com.intellij.coverage.actions.TrackCoverageActionProvider"/>
    <coverageRunner implementation="com.intellij.coverage.EmmaCoverageRunner"/>
    <!--<coverageRunner implementation="com.intellij.coverage.CoberturaCoverageRunner"/>-->
    <coverageRunner implementation="com.intellij.coverage.IDEACoverageRunner"/>
  </extensions>
  <extensions defaultExtensionNs="com.theoryinpractice.testng">
    <listener implementation="org.testng.IDEACoverageListener"/>
  </extensions>
  <project-components>
    <component>
      <interface-class>com.intellij.coverage.CoverageDataManager</interface-class>
      <implementation-class>com.intellij.coverage.CoverageDataManagerImpl</implementation-class>
      <option name="workspace" value="true"/>
    </component>
  </project-components>
  <actions>
    <group id="CoverageMenu">
      <action id="SwitchCoverage" class="com.intellij.coverage.actions.SwitchCoverageSuiteAction" text="Code Co_verage Data"/>
      <action id="GenerateCoverageReport" class="com.intellij.coverage.actions.GenerateCoverageReportAction" text="_Generate Coverage Report"/>
      <separator/>

      <add-to-group group-id="AnalyzeMenu" anchor="before" relative-to-action="ShowPackageDeps"/>
    </group>

  </actions>
</idea-plugin>
