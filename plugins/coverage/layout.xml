<project name="Layout Coverage plugin distribution" default="layout">
  <target name="layout">
    <patternset id="resources.included">
      <include name="**/*.properties"/>
    </patternset>
    <patternset id="resources.excluded">
      <exclude name="**/*.properties"/>
    </patternset>

    <layout todir="${deploy}/plugins" xmlns="antlib:jetbrains.antlayout">
      <dir name="coverage">
        <dir name="lib">
          <jar name="coverage.jar">
            <module name="coverage-impl"/>
            <module name="coverage"/>
          </jar>
          <fileset dir="${project.home}/plugins/coverage-impl/lib" includes="**/*.jar"/>
          <fileset dir="${project.home}/plugins/coverage/lib" includes="**/*.jar"/>
        </dir>
      </dir>
    </layout>
  </target>
</project>