  <id>myPlugin</id>

  <extensionPoints>
    <extensionPoint name="myExtension" beanClass="MyExtensionPoint"/>
  </extensionPoints>

  <extensions defaultExtensionNs="myPlugin">
    <myExtension titleProperty="Title Text"/>
