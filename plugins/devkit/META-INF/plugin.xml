<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD" "http://plugins.intellij.net/plugin.dtd">
<idea-plugin version="2">
  <name>Plugin DevKit</name>
  <id>DevKit</id>
  <description>IntelliJ IDEA plugins development kit</description>
  <version>0.0.1</version>
  <vendor logo="/general/ijLogo.png">JetBrains</vendor>
  <idea-version since-build="3000"/>

  <extensions xmlns="com.intellij">
    <errorHandler implementation="com.intellij.diagnostic.ITNReporter"/>
    <junitPatcher implementation="org.jetbrains.idea.devkit.run.JUnitDevKitPatcher"/>
  </extensions>

  <application-components>
    <component>
      <implementation-class>org.jetbrains.idea.devkit.DevKitPlugin</implementation-class>
    </component>
    <component>
      <implementation-class>org.jetbrains.idea.devkit.projectRoots.IdeaJdk</implementation-class>
    </component>
    <component>
      <implementation-class>org.jetbrains.idea.devkit.run.PluginConfigurationType</implementation-class>
    </component>
    <component>
      <implementation-class>org.jetbrains.idea.devkit.module.PluginTemplatesFactory</implementation-class>
    </component>
  </application-components>

  <module-components>
    <component>
      <implementation-class>org.jetbrains.idea.devkit.module.PluginModuleEditorsProvider</implementation-class>
      <option name="type" value="PLUGIN_MODULE"/>
    </component>
    <component>
      <interface-class>com.intellij.j2ee.make.ModuleBuildProperties</interface-class>
      <implementation-class>org.jetbrains.idea.devkit.build.PluginModuleBuildProperties</implementation-class>
      <option name="type" value="PLUGIN_MODULE"/>
    </component>    
    <component>
      <interface-class>com.intellij.j2ee.make.ModuleBuildDescriptor</interface-class>
      <implementation-class>org.jetbrains.idea.devkit.build.PluginModuleBuildDescriptor</implementation-class>
      <option name="type" value="PLUGIN_MODULE"/>
    </component>  
  </module-components>
  <actions>
    <group>
      <action class="org.jetbrains.idea.devkit.build.PrepareToDeployAction" text="Prepare To Deploy" id="MakeJarAction" />
      <add-to-group anchor="after" group-id="ProjectViewPopupMenu" relative-to-action="Compile"/>
    </group>
  </actions>
</idea-plugin>
