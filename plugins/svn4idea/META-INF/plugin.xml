<idea-plugin version="2">
  <name>Subversion Integration</name>
  <id>Subversion</id>
  <description>Allows using Subversion from within IntelliJ IDEA, making even refactoring consequences transparent for the user.</description>
  <version>1.0</version>
  <vendor logo="/general/ijLogo.png">JetBrains</vendor>
  <idea-version min="5.0" max="5.0"/>

  <extensions xmlns="com.intellij">
    <errorHandler implementation="com.intellij.diagnostic.ITNReporter"/>
  </extensions>

  <application-components>
    <component>
      <implementation-class>com.qintsoft.svn4idea.SvnApplicationSettings</implementation-class>
      <option name="workspace" value="true"/>
    </component>
    <component>
      <implementation-class>com.qintsoft.svn4idea.checkout.SvnCheckoutProvider</implementation-class>
    </component>
  </application-components>

  <project-components>
    <component>
      <implementation-class>com.qintsoft.svn4idea.SvnVcs</implementation-class>
      <option name="workspace" value="true"/>
    </component>
    <component>
      <implementation-class>com.qintsoft.svn4idea.SvnConfiguration</implementation-class>
      <option name="workspace" value="true"/>
    </component>
    <component>
      <implementation-class>com.qintsoft.svn4idea.history.SvnChangesBrowserSettings</implementation-class>
      <option name="workspace" value="true"/>
    </component>
  </project-components>

  <actions>

    <group id="SubversionFilePopupGroup" popup="true" text="_Subversion" class="com.qintsoft.svn4idea.actions.SubversionGroup">
      <add-to-group group-id="VcsGroup" anchor="last"/>
      <add-to-group group-id="VcsGroups" anchor="last"/>      
    </group>

    <group id="SubversionGroup">
      <separator/>
      <action id="Subversion.Add" class="com.qintsoft.svn4idea.actions.AddAction" text="Add" description="Add the file to Subversion"/>
      <reference id="CheckinFiles"/>
      <reference id="UpdateFiles"/>
      <reference id="CheckStatusForFiles"/>
      <reference id="Vcs.ShowTabbedFileHistory"/>
      <action id="Subversion.Revert" class="com.qintsoft.svn4idea.actions.RevertAction" text="Revert file" description="Revert file to repository state"/>
      <action id="Subversion.Resolve" class="com.qintsoft.svn4idea.actions.ResolveAction" text="Confilct Resolved" description="Tell Subversion that the conflict has been resolved"/>
      <separator/>
      <reference id="Compare.SameVersion" text="Compare with BASE revision"/>
      <reference id="Compare.LastVersion" text="Comparet with revision at HEAD"/>
      <reference id="Compare.Selected"/>
      <reference id="Annotate"/>
      
      <separator/>
      <action id="SvnChangesBrowser" class="com.qintsoft.svn4idea.actions.BrowseChangesAction" text="Browse Changes..."/>
      <add-to-group group-id="SubversionFilePopupGroup" anchor="last"/>
    </group>
  </actions>
</idea-plugin>
