<idea-plugin version="2">
    <id>com.jetbrains.space</id>
    <name>Space Integration</name>
    <version>0.1.dev</version>
    <vendor email="support@jetbrains.com" url="jetbrains.com">JetBrains</vendor>

    <description><![CDATA[Space Integration plugin]]></description>

    <change-notes><![CDATA[]]>

    </change-notes>

    <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="183.2153.8"/>

    <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="circlet.settings.CircletServerSettingsComponent"/>

        <applicationConfigurable
            groupId="tools"
            groupWeight="239"
            displayName="Space"
            instance="circlet.settings.CircletConfigurable"
        />

        <toolWindow id="Space"
                    icon="CircletIcons.mainIcon"
                    anchor="right"
                    canCloseContents="true"
                    factoryClass="circlet.tools.CircletToolWindowFactory"/>

        <projectService serviceImplementation="circlet.plugins.pipelines.services.CircletModelStore"/>
        <projectService serviceImplementation="circlet.plugins.pipelines.services.CircletAutomationListener"/>
        <projectService serviceImplementation="circlet.plugins.pipelines.services.SyncDslViewManager"/>
        <projectService serviceImplementation="circlet.plugins.pipelines.services.execution.CircletTaskRunner"/>
        <runLineMarkerContributor
            language="kotlin"
            id="circletScriptRunLineMarkerProvider"
            implementationClass="circlet.plugins.pipelines.services.CircletScriptRunLineMarkerProvider"/>

        <configurationType implementation="circlet.plugins.pipelines.services.run.CircletRunConfigurationType"/>

    </extensions>

    <!--pipelines-->
    <extensions defaultExtensionNs="org.jetbrains.kotlin">
        <scriptDefinitionsProvider
            id="circletScriptDefinitionsProvider"
            implementation="circlet.plugins.pipelines.services.CircletScriptDefinitionsProvider"
            order="first"
        />
    </extensions>

    <application-components>
        <component>
            <implementation-class>circlet.components.CircletApplicationComponent</implementation-class>
        </component>

        <component>
            <implementation-class>circlet.components.CircletWorkspaceComponent</implementation-class>
        </component>
    </application-components>


    <actions>

        <action class="circlet.actions.ReEnterCredentialsAction" text="Re-enter credentials..."
                id="Circlet.ReEnterCredentialsAction"/>
        <action class="circlet.actions.TestCircletAction" text="Test Space..." id="Circlet.TestCircletAction"/>

        <group text="Space" id="CircletGroup" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <reference id="Circlet.ReEnterCredentialsActionRef" ref="Circlet.ReEnterCredentialsAction"/>
            <reference id="Circlet.TestCircletActionRef" ref="Circlet.TestCircletAction"/>
        </group>

    </actions>

</idea-plugin>
