<idea-plugin version="2">
    <id>com.jetbrains.circlet</id>
    <name>Circlet Integration</name>
    <version>0.1.dev</version>
    <vendor email="support@jetbrains.com" url="jetbrains.com">JetBrains</vendor>

    <description><![CDATA[Circlet Integration plugin]]></description>

    <change-notes><![CDATA[]]>

    </change-notes>

    <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="182.2371.4"/>

    <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">

        <applicationConfigurable
            groupId="tools"
            groupWeight="239"
            displayName="Circlet"
            instance="circlet.settings.CircletConfigurable"
        />

        <toolWindow id="Circlet" anchor="right" canCloseContents="true"
                    factoryClass="circlet.tools.CircletToolWindowFactory"/>

        <projectService serviceImplementation="circlet.plugins.pipelines.services.CircletModelStore" />
        <projectService serviceImplementation="circlet.plugins.pipelines.services.CircletAutomationListener" />
        <runLineMarkerContributor
            language="kotlin"
            id="circletScriptRunLineMarkerProvider"
            implementationClass="circlet.plugins.pipelines.services.CircletScriptRunLineMarkerProvider"/>

    </extensions>

    <!--pipelines-->
    <extensions defaultExtensionNs="org.jetbrains.kotlin">
        <scriptDefinitionsProvider
            id="circletScriptDefinitionsProvider"
            implementation="circlet.plugins.pipelines.services.CircletScriptDefinitionsProvider"
            order="first"
        />
    </extensions>

    <application-components>
        <component>
            <implementation-class>circlet.components.CircletApplicationComponent</implementation-class>
        </component>

        <component>
            <implementation-class>circlet.components.CircletWorkspaceComponent</implementation-class>
        </component>
        <component>
            <implementation-class>circlet.components.CircletServerSettingsComponent</implementation-class>
        </component>
        <component>
            <implementation-class>circlet.components.CircletAutomationSettingsComponent</implementation-class>
        </component>
    </application-components>

    <project-components>
        <component>
            <implementation-class>circlet.tools.CircletToolWindowManager</implementation-class>
        </component>
    </project-components>

    <actions>

        <action class="circlet.actions.ReEnterCredentialsAction" text="Re-enter credentials..." id="Circlet.ReEnterCredentialsAction"/>
        <action class="circlet.actions.TestCircletAction" text="Test Circlet..." id="Circlet.TestCircletAction"/>



        <group text="Circlet" id="CircletGroup" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <reference id="Circlet.ReEnterCredentialsActionRef" ref="Circlet.ReEnterCredentialsAction"/>
            <reference id="Circlet.TestCircletActionRef" ref="Circlet.TestCircletAction"/>
        </group>

    </actions>

</idea-plugin>
