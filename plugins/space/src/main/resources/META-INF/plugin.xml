<idea-plugin>
  <id>com.jetbrains.space</id>
  <name>Space</name>

  <description>
    <![CDATA[
            Lets you connect your IDE to your organization in <a href="https://jetbrains.com/space/">JetBrains Space</a> so you can view and clone project repositories.
        ]]>
  </description>
  <vendor>JetBrains</vendor>

  <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <depends>com.intellij.modules.platform</depends>
  <depends optional="true" config-file="space-automation-kts.xml">org.jetbrains.kotlin</depends>
  <depends>com.intellij.modules.vcs</depends>
  <depends>Git4Idea</depends>

  <extensions defaultExtensionNs="com.intellij">
    <applicationService serviceImplementation="com.intellij.space.settings.CircletSettings"/>
    <applicationService serviceImplementation="com.intellij.space.components.CircletUserAvatarProvider"/>


    <applicationConfigurable
      groupId="tools"
      groupWeight="239"
      displayName="Space"
      instance="com.intellij.space.settings.CircletSettingsPanel"/>

    <toolWindow id="Space Automation"
                icon="SpaceIcons.MainToolwindow"
                anchor="right"
                canCloseContents="true"
                factoryClass="com.intellij.space.tools.CircletToolWindowFactory"/>

    <projectService serviceImplementation="com.intellij.space.plugins.pipelines.services.SpaceKtsFileDetector"/>
    <projectService serviceImplementation="com.intellij.space.plugins.pipelines.services.SpaceKtsModelBuilder"/>
    <projectService serviceImplementation="com.intellij.space.plugins.pipelines.services.SyncDslViewManager"/>
    <projectService serviceImplementation="com.intellij.space.plugins.pipelines.services.execution.CircletTaskRunner"/>
    <projectService serviceImplementation="com.intellij.space.plugins.pipelines.ui.CircletToolWindowService"/>
    <projectService serviceImplementation="com.intellij.space.vcs.CircletProjectContext"/>
    <runLineMarkerContributor
      language="kotlin"
      id="spaceScriptRunLineMarkerProvider"
      implementationClass="com.intellij.space.plugins.pipelines.services.CircletScriptRunLineMarkerProvider"/>

    <configurationType implementation="com.intellij.space.plugins.pipelines.services.run.CircletRunConfigurationType"/>

    <openapi.vcs.ui.cloneDialog.VcsCloneDialogExtension implementation="com.intellij.space.vcs.clone.CircletCloneExtension"/>

    <postStartupActivity implementation="com.intellij.space.vcs.PostStartupActivity"/>
    <postStartupActivity implementation="com.intellij.space.plugins.pipelines.services.SpaceKtsFileDetectorActivator"/>

  </extensions>

  <actions>
    <group id="space.actions.MainToolbarActionGroup">
      <separator/>
      <action id="com.intellij.space.actions.CircletMainToolBarAction"
              class="com.intellij.space.actions.CircletMainToolBarAction"
              icon="SpaceIcons.MainToolwindow"
              text="Space Toolbar Menu">
      </action>
      <add-to-group group-id="NavBarToolBar" anchor="last"/>
    </group>


    <action id="com.intellij.space.vcs.clone.CircletCloneAction"
            class="com.intellij.space.vcs.clone.CircletCloneAction"
            text="Clone Repository..."/>

    <action id="com.intellij.space.actions.CircletLoginAction"
            class="com.intellij.space.actions.CircletLoginAction"
            text="Log In to Space..."/>
    <action id="com.intellij.space.actions.CircletLogoutAction"
            class="com.intellij.space.actions.CircletLogoutAction"
            text="Log Out..."/>

    <group id="com.intellij.space.vcs.OpenReviews" class="com.intellij.space.vcs.OpenReviews" text="Open Code Reviews..."/>
    <group id="com.intellij.space.vcs.OpenChecklists" class="com.intellij.space.vcs.OpenChecklists" text="Open Checklists..."/>
    <group id="com.intellij.space.vcs.OpenIssues" class="com.intellij.space.vcs.OpenIssues" text="Open Issues..."/>
    <!--        <group id="circlet.vcs.OpenProjects" class="circlet.vcs.OpenProjects" text="Open Projects..."/>-->

    <group text="Space" id="SpaceGroup" popup="true" icon="SpaceIcons.Main">
      <add-to-group group-id="ToolsMenu" anchor="last"/>
      <reference id="com.intellij.space.vcs.clone.CircletCloneAction"/>
      <separator/>
      <reference id="com.intellij.space.vcs.OpenReviews"/>
      <reference id="com.intellij.space.vcs.OpenChecklists"/>
      <reference id="com.intellij.space.vcs.OpenIssues"/>
      <separator/>
      <reference id="com.intellij.space.actions.CircletLoginAction"/>
      <reference id="com.intellij.space.actions.CircletLogoutAction"/>
    </group>

    <group id="com.intellij.space.vcs.CircletVcsOpenInBrowserActionGroup"
           class="com.intellij.space.vcs.CircletVcsOpenInBrowserActionGroup"
           text="Open On Space">
      <add-to-group group-id="EditorPopupMenu"/>
      <add-to-group group-id="ProjectViewPopupMenu"/>
      <add-to-group group-id="EditorTabPopupMenu"/>
      <add-to-group group-id="Vcs.Log.ContextMenu" anchor="last"/>
      <add-to-group group-id="VcsHistoryActionsGroup" anchor="last"/>
      <add-to-group group-id="VcsHistoryActionsGroup.Toolbar"/>
    </group>
    <action id="com.intellij.space.vcs.share.CircletShareProjectAction"
            class="com.intellij.space.vcs.share.CircletShareProjectAction"
            text="Share Project on Space">
      <add-to-group group-id="SpaceGroup" anchor="first"/>
      <add-to-group group-id="Vcs.Import" anchor="last"/>
    </action>
  </actions>

</idea-plugin>
