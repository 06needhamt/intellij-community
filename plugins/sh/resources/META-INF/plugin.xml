<idea-plugin>
  <idea-version/>
  <id>com.jetbrains.bash</id>
  <vendor email="ignatov@jetbrains.com">Sergey Ignatov</vendor>
  <depends>com.intellij.modules.lang</depends>
  <depends optional="true" config-file="terminal.xml">org.jetbrains.plugins.terminal</depends>
  <name>Bash</name>
  <description><![CDATA[
    <p>Bash support for IntelliJ IDEA, RubyMine, WebStorm, etc.</p>
    ]]></description>
  <extensions defaultExtensionNs="com.intellij">
    <fileTypeFactory implementation="com.intellij.bash.BashFileTypeFactory"/>
    <lang.parserDefinition language="Bash" implementationClass="com.intellij.bash.parser.BashParserDefinition"/>
    <lang.commenter language="Bash" implementationClass="com.intellij.bash.BashCommenter"/>
    <lang.quoteHandler language="Bash" implementationClass="com.intellij.bash.BashQuoteHandler"/>
    <backspaceHandlerDelegate implementation="com.intellij.bash.BashBackspaceHandler"/>
    <lineIndentProvider implementation="com.intellij.bash.BashLineIndentProvider"/>
    <editor.backspaceModeOverride language="Bash" implementationClass="com.intellij.bash.BashBackspaceModeOverride"/>

    <lang.psiStructureViewFactory language="Bash" implementationClass="com.intellij.bash.BashStructureViewFactory"/>

    <annotator language="Bash" implementationClass="com.intellij.bash.BashAnnotator"/>
    <additionalTextAttributes scheme="Default" file="colors/BashDefault.xml"/>
    <additionalTextAttributes scheme="Darcula" file="colors/BashDarcula.xml"/>

    <psi.referenceContributor implementation="com.intellij.bash.BashUrlReferenceContributor"/>

    <completion.contributor language="Bash" implementationClass="com.intellij.bash.completion.BashKeywordCompletionContributor"/>
    <completion.contributor language="Bash" implementationClass="com.intellij.bash.completion.BashFilePathCompletionContributor"/>
    <completion.contributor language="Bash" implementationClass="com.intellij.bash.completion.BashCompletionContributor"/>
    <lang.braceMatcher language="Bash" implementationClass="com.intellij.bash.BashBraceMatcher"/>
    <lang.documentationProvider language="Bash" implementationClass="com.intellij.bash.BashDocumentationProvider"/>
    <runLineMarkerContributor language="Bash" implementationClass="com.intellij.bash.run.BashRunLineMarkerContributor"/>

    <externalFormatProcessor implementation="com.intellij.bash.formatter.BashExternalFormatter"/>
    <lang.formatter language="Bash" implementationClass="com.intellij.bash.formatter.BashFormatterModelBuilder"/>
    <postFormatProcessor implementation="com.intellij.bash.formatter.BashPostFormatProcessor"/>
    <registryKey key="bash.shfmt.path"/>

    <externalAnnotator language="Bash" implementationClass="com.intellij.bash.shellcheck.BashShellcheckExternalAnnotator"/>
    <registryKey key="bash.shellcheck.path"/>
    <localInspection language="Bash" shortName="ShellCheck"
                     enabledByDefault="true" level="ERROR" unfair="true"
                     implementationClass="com.intellij.bash.shellcheck.BashShellcheckInspection"
                     displayName="ShellCheck" groupName="Bash"/>

    <defaultLiveTemplatesProvider implementation="com.intellij.bash.template.BashTemplateProvider"/>
    <liveTemplateContext implementation="com.intellij.bash.template.BashContextType"/>
    <fileTypeDetector implementation="com.intellij.bash.BashFileTypeDetector"/>
    <highlightErrorFilter implementation="com.intellij.bash.BashErrorFilter"/>
    <daemon.highlightInfoFilter implementation="com.intellij.bash.BashErrorFilter"/>
  </extensions>
  <actions>
    <action id="runShellFileAction" class="com.intellij.bash.run.BashRunFileAction" text="Run File"
            description="Run current shell file in the terminal" use-shortcut-of="RunClass"/>
  </actions>
</idea-plugin>
