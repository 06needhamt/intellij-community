<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD" "http://plugins.intellij.net/plugin.dtd">
<idea-plugin version="2" url="http://pythonid.dev.java.net">
  <name>Pythonid</name>
  <id>Pythonid</id>
  <description>Smart editing for Python scripts</description>
  <version>2.0</version>
  <vendor url="http://pythonid.dev.java.net" logo="/ru/yole/pythonid/python.png">Dmitry
    Jemerov, Keith Lea</vendor>
  <change-notes>Updated for IntelliJ IDEA 7.0</change-notes>

  <extensions defaultExtensionNs="com.intellij">
    <fileTypeFactory implementation="ru.yole.pythonid.PythonFileTypeFactory"/>
    <lang.syntaxHighlighterFactory key="Python" implementationClass="ru.yole.pythonid.PySyntaxHighlighterFactory"/>
    <lang.braceMatcher language="Python" implementationClass="ru.yole.pythonid.PyBraceMatcher"/>
    <lang.parserDefinition language="Python" implementationClass="ru.yole.pythonid.PythonParserDefinition"/>
    <lang.commenter language="Python" implementationClass="ru.yole.pythonid.PythonCommenter"/>
    <lang.foldingBuilder language="Python" implementationClass="ru.yole.pythonid.PythonFoldingBuilder"/>
    <lang.findUsagesProvider language="Python" implementationClass="ru.yole.pythonid.PythonFindUsagesProvider"/>
    <lang.formatter language="Python" implementationClass="ru.yole.pythonid.PythonFormattingModelBuilder"/>
    <lang.psiStructureViewFactory language="Python" implementationClass="ru.yole.pythonid.structureView.PyStructureViewFactory"/>
    <lang.documentationProvider language="Python" implementationClass="ru.yole.pythonid.PythonDocumentationProvider"/>
    <annotator language="Python" implementationClass="ru.yole.pythonid.validation.PyAnnotatingVisitor"/>
    <configurationType implementation="ru.yole.pythonid.run.PythonConfigurationType"/>
    <programRunner implementation="ru.yole.pythonid.run.PythonRunner"/>
    <backspaceHandlerDelegate implementation="ru.yole.pythonid.editor.PythonBackspaceHandler"/>
    <quoteHandler fileType="Python" className="ru.yole.pythonid.editor.PythonQuoteHandler"/>
    <sdkType implementation="ru.yole.pythonid.sdk.PythonSdkType"/>
    <fileBasedIndex implementation="ru.yole.pythonid.index.PyClassIndex"/>
    <gotoClassContributor implementation="ru.yole.pythonid.PyGotoClassContributor"/>
    <codeInsight.parameterInfo language="Python" implementationClass="ru.yole.pythonid.PyParameterInfoHandler"/>
    <projectConfigurable implementation="ru.yole.pythonid.configuration.PythonSdkConfigurable"/>
    <colorSettingsPage implementation="ru.yole.pythonid.PythonColorsPage"/>
  </extensions>
</idea-plugin>
